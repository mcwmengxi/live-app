{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:5137",
    "distDir": "../dist"
  },
  "package": {
    "productName": "live-app",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "startDragging": true,
        "setDecorations": false
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": ["**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["data","mmd"]
    },
    "security": {
      "csp": "default-src 'self'; asset: https://asset.localhost;"
    },
    "systemTray": {
      "iconPath": "icons/icon.ico"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "live-app",
        "width": 200,
        "height": 150,
        "transparent": true,
        "decorations": false,
        "x": 30,
        "y": 880,
        "alwaysOnTop": true
      }
    ]
  }
}
